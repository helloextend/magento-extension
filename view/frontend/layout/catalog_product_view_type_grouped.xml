<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-product-grouped"/>
        <referenceContainer name="product.info.form.content">
            <referenceBlock name="product.info.grouped" before="product.info.addtocart" template="Extend_Warranty::grouped.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    <argument name="offerTypeArea" xsi:type="string">product_page</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
