<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="sales_order_item_renderers"/>
    <update handle="sales_order_item_price"/>
    <update handle="sales_order_guest_info_links"/>
    <body>
        <referenceBlock name="require.js">
            <arguments>
                <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Installation</argument>
            </arguments>
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Extend_Warranty::installation.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">

            <referenceBlock name="order_items">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Extend_Warranty::order/items.phtml</argument>
                </action>
                <block class="Magento\Sales\Block\Order\View"
                       name="add_warranty"
                       template="Extend_Warranty::order/view/leads.phtml"
                       after="-"
                >
                    <arguments>
                        <argument name="view_model" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    </arguments>
                </block>
            </referenceBlock>

        </referenceContainer>
    </body>
</page>
