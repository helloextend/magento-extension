<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <update handle="extend_warranty_installation" />
    <body>
        <!-- Simple Product -->
        <referenceContainer name="product.info.form.content">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.form.warranty" template="Extend_Warranty::product/view/warranty.phtml" before="product.info.addtocart">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    <argument name="offerTypeArea" xsi:type="string">product_page</argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Configurable Products -->
        <referenceBlock name="product.info.options.wrapper.bottom">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.options.warranty" template="Extend_Warranty::product/view/warranty.phtml" before="product.info.addtocart.additional">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    <argument name="offerTypeArea" xsi:type="string">product_page</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>

</page>
