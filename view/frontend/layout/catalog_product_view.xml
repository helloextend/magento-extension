<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="require.js">
            <arguments>
                <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Installation</argument>
            </arguments>
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Extend_Warranty::installation.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceBlock name="product.info.addtocart" template="Extend_Warranty::warranty.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    <argument name="offerTypeArea" xsi:type="string">product_page</argument>
                </arguments>
            </referenceBlock>
            <referenceBlock name="product.info.addtocart.additional" template="Extend_Warranty::warranty.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Warranty</argument>
                    <argument name="offerTypeArea" xsi:type="string">product_page</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
